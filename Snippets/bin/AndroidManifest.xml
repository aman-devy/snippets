<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.aea.snippets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:launchMode="standard" >
        <activity android:name="info.aea.launch.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:configChanges="keyboardHidden|orientation"
            android:name="info.aea.rss.AndroidRSSReaderApplicationActivity"
            android:label="@string/app_name" >
        </activity>
  
        <!-- Add New Site Activity -->
        <activity android:name="info.aea.rss.AddNewSiteActivity" />
        
        <!-- List rss items Activity -->
        <activity android:name="info.aea.rss.ListRSSItemsActivity" 
            android:configChanges="keyboardHidden|orientation"/>
        
        <!-- Display webpage Activity -->
        <activity android:name="info.aea.rss.DisPlayWebPageActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:configChanges="keyboardHidden|orientation" />
        
        <activity
            android:name="info.aea.launch.LaunchActivity_NavDrawer"
            android:label="@string/app_name"
            android:noHistory="false" >
        </activity>
        <activity
            android:name="info.aea.activities.activity_compiler"
            android:label="@string/title_activity_testact" >
        </activity>
        
        <activity
            android:name="info.aea.activities.activity_compare"
            android:label="@string/title_activity_testact" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="com.facebook.LoginActivity"
            android:noHistory="false" >
        </activity>
        <activity
            android:name="info.aea.activities.activity_fblogin"
            android:label="@string/title_activity_test" >
        </activity>
        
        <activity
            android:name="info.aea.compiler.activities.IdeoneSample"
            android:label="@string/app_name" >
        </activity>
        
    </application>

</manifest>
