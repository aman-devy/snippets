<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="100"
    android:background="#98B08D" >
    
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Choose language"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="#FFCC00" />

        <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
       <TextView
            android:id="@+id/checkedTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Algorithm 1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
       
       <TextView
           android:id="@+id/checkedTextView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="100dp"
           android:layout_marginTop="20dp"
           android:text="Algorithm 2"
           android:textColor="#000000"
           android:textSize="18sp"
           android:textStyle="bold" />
       
       </LinearLayout>
        
        <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="100"
        android:orientation="horizontal" >            
          
         <EditText
            android:id="@+id/edittextSource"
            android:layout_width="165dp"
            android:layout_weight="50"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e5e5e5"
            android:gravity="top"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false" >
        </EditText>
        
        <EditText
            android:id="@+id/edittextSource2"
            android:layout_width="165dp"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e5e5e5"
            android:gravity="top"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false" >
        </EditText>
        </LinearLayout>
        
        <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >            
        
        <TextView
            android:id="@+id/checkedTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Standard Input (stdin)"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="50"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/checkedTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Standard Input (stdin)"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="50"
            android:textStyle="bold" />
        
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edittextInput"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:singleLine="false" />

            <EditText
                android:id="@+id/edittextInput2"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:singleLine="false" />
        </LinearLayout>
        
        <Button
            android:id="@+id/btnExecute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.33"
            android:background="#354B5E"
            android:text="Execute + Compare"
            android:textColor="#FFCC00"
            android:textStyle="bold" />

        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
            
        <TextView
            android:id="@+id/comresult"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Compiler Result 1 "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/comresult2"
            android:layout_weight="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:text="Compiler Result 2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textResult"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:layout_weight="50"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textResult2"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"
            android:textColor="#FF0000"
            android:layout_weight="50"
            android:textSize="15sp"
            android:textStyle="bold" />
        
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
           
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Console output 1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:text="Console output 2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
	
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            
        <TextView
            android:id="@+id/textOutput"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#354B5E"
            android:textSize="15sp"
            android:textStyle="normal" />
        
        <TextView
            android:id="@+id/textOutput2"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:textColor="#354B5E"
            android:textSize="15sp"
            android:textStyle="normal" />

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
 
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="50"
            android:text="Time taken 1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="Time taken 2"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_weight="50"
            android:textStyle="bold" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/gettime"
            android:layout_width="wrap_content"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/gettime2"
            android:layout_width="wrap_content"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="150dp"
            android:textColor="#000000"
            android:textSize="18sp" />
        
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_weight="50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Memory crunched 1" />
        
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:layout_weight="50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Memory crunched 2" />

        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/getmem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        
        <TextView
            android:id="@+id/getmem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="130dp"
            android:textColor="#000000"
            android:textSize="18sp" />

     	</LinearLayout>
     	
                
    </LinearLayout>

</ScrollView>